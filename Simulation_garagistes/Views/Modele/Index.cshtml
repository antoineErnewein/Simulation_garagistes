@model IEnumerable<DAL.Models.Modele>

@{
    ViewBag.Title = "Liste des modèles";
}

<h2>Liste des modèles</h2>

<p>
    @if (Request.IsAuthenticated) {
    <a href="~/Modele/Create">Ajouter un modèle</a>
    <a href="~/Marque">Ajouter une marque</a>
    }
</p>
<table class="table table-striped">
    <tr>
        <th>
           Modèle
        </th>
        <th>
           Marque
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Nom
        </td>
        <td>
            @item.Marque.Nom
        </td>
        <td>            
            @if (Request.IsAuthenticated) {
                <a href="~/Modele/Edit/@item.ID" style="box-shadow: none; background-color: transparent;" title="Editer"><img src="../../Images/edit/edit-26.png" alt="Editer" width="20" height="20"></a>
            @*<a href="~/Marque/Edit/@item.ID">Editer |</a>*@
            }
            <a href="~/Modele/Details/@item.ID" style="box-shadow: none; background-color: transparent;" title="Carnet"><img src="../../Images/carnet/overview_pages_2-26.png" alt="Carnet" width="20" height="20"></a>
           
            @*<a href="~/Marque/Details/@item.ID">Carnet</a>*@
            @if (Request.IsAuthenticated) {
                 <a href="~/Modele/Delete/@item.ID" style="box-shadow: none; background-color: transparent;" title="Supprimer"><img src="../../Images/delete/delete-26.png" alt="Supprimer" width="20" height="20"></a>
            
            @*<a href="~/Marque/Delete/@item.ID">| Supprimer</a>*@
            }        
        </td>
    </tr>
}

</table>
