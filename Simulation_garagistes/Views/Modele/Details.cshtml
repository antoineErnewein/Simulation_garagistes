@model DAL.Models.Modele

@{
    ViewBag.Title = "Carnet d'entretien";
}

<h2>Carnet d'entretien du modèle @Model.Nom</h2>

<h3>Modèle</h3>
<table class="table table-striped">

    <tr>
        <th>Libellé
        </th>
        <th>Kilométrage
        </th>
        <th>Durée d'intervention
        </th>
        @if (Request.IsAuthenticated)
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model.Revision)
    {
        <tr>
            <td>
                @item.Libelle
            </td>
            <td>
                @item.Kilometrage
            </td>
            <td>
                @item.DureeIntervention
            </td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    <a href="~/Revision/Edit/@item.ID">Editer</a> |
            <a href="~/Revision/Delete/@item.ID">Supprimer</a>
                </td>
            }
        </tr>
    }
</table>

<h3>Marque</h3>
<table class="table table-striped">

    <tr>
        <th>Libellé
        </th>
        <th>Kilométrage
        </th>
        <th>Durée d'intervention
        </th>
        @if (Request.IsAuthenticated)
        {
            <th></th>
        }
    </tr>
    @foreach (var item in Model.Marque.Revision)
    {
        <tr>
            <td>
                @item.Libelle
            </td>
            <td>
                @item.Kilometrage
            </td>
            <td>
                @item.DureeIntervention
            </td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    <a href="~/Revision/Edit/@item.ID">Editer</a> |
            <a href="~/Revision/Delete/@item.ID">Supprimer</a>
                </td>
            }
        </tr>
    }
</table>

<a href="~/Modele">Retour à la liste des modèles</a>
