@model DAL.Models.Marque

@{
    ViewBag.Title = "Carnet d'entretien";
}

<h2>Carnet d'entretien de la marque @Model.Nom</h2>
<br />

@if (Model.Revision.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Libellé
            </th>
            <th>Kilométrage
            </th>
            <th>Durée d'intervention
            </th>
            @if (Request.IsAuthenticated)
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model.Revision)
        {
            <tr>
                <td>
                    @item.Libelle
                </td>
                <td>
                    @item.Kilometrage
                </td>
                <td>
                    @item.DureeIntervention
                </td>
                @if (Request.IsAuthenticated)
                {
                    <td>
                        <a href="~/Revision/Edit/@item.ID" style="box-shadow: none; background-color: transparent;" title="Editer"><img src="../../Images/edit/edit-26.png" alt="Editer" width="20" height="20"></a>
           
                 <a href="~/Revision/Delete/@item.ID" style="box-shadow: none; background-color: transparent;" title="Supprimer"><img src="../../Images/delete/delete-26.png" alt="Supprimer" width="20" height="20"></a>
            
@*                        <a href="~/Revision/Edit/@item.ID">Editer</a> |
            <a href="~/Revision/Delete/@item.ID">Supprimer</a>*@
                    </td>
                }
            </tr>
        }

    </table>
}
else
{
    <h3>Aucune révision enregistrée pour cette marque</h3>
}
<a href="~/Marque">Retour à la liste des marques</a>

