@model IEnumerable<DAL.Models.Revision>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Libellé
        </th>        
        <th>
            Kilométrage
        </th>
        <th>
            Marque/Modèle
        </th>
        <th>
            Durée d'intervention
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Libelle
        </td>
        <td>
            @item.Kilometrage
        </td>
        <td>
            @if (item.Marque.Nom == null && @item.Modele.Nom == null){
                <p>Aucune marque ou modèle associée"</p>
            }
            else if (item.Marque == null){
                <p>@item.Modele.Nom</p>
            }
            else if (item.Modele == null){
                <p>@item.Marque.Nom</p>
            }
            else{
                <p>@item.Marque.Nom / @item.Modele.Nom</p>
            }
        </td>        
        <td>
            @item.DureeIntervention
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
